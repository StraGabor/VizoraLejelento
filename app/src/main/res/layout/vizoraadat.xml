<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#93C7EF"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#93C7EF"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vizora azonosito:"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary"
            />

        <EditText
            android:id="@+id/azonosito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="120dp"
            android:inputType="number"
            android:text="@string/vizora_szama"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vizora allasa:"
            android:padding="8dp"
            android:layout_marginTop="40dp"
            android:textColor="?android:textColorSecondary"
            />

        <EditText
            android:id="@+id/oraallas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/azonosito"
            android:padding="8dp"
            android:inputType="number"
            android:layout_marginLeft="120dp"
            android:text="@string/oraallas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ugyfelnev:"
            android:padding="8dp"
            android:layout_marginTop="80dp"
            android:textColor="?android:textColorSecondary"
            />

        <EditText
            android:id="@+id/ugyfelnev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/oraallas"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginLeft="120dp"
            android:text="@string/nev" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:padding="8dp"
            android:layout_marginTop="120dp"
            android:textColor="?android:textColorSecondary"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ugyfelnev"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginLeft="120dp"
            android:text="@string/email" />

        <TextView
            android:id="@+id/befizetett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:padding="8dp"
            android:text="@string/befizetett" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/befizetett"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/ujradiktal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/modositas" />

            <Button
                android:id="@+id/torol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/torol" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>